@section scripts {
        @Scripts.Render("~/bundles/app")
}
@{
    ViewBag.Title = "Chat ASP WPI";
}
<div class="container">
    <div class="page-header">
        <h1>Chat</h1>
    </div>

    
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">Msgs</h2>
                    </div>
                    <div id="chat">
                        <div class="panel-body">
                            <ul class="list-unstyled" data-bind="foreach: msg">
                                <li>
                                    <strong><p data-bind="text: Name"></p></strong>
                                    <p class="msg" data-bind="text: Content" id="userMsg"></p>
                                    
                                    <p data-bind="text: Time" class="time"></p>
                                    <hr />
                                </li>
                            </ul>
                        </div>
                        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
                    </div>
                
            </div>

        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Ввведите сообщение, <strong data-bind="text: currentUser"></strong></h2>
                </div>

                <div class="panel-body">
                    <form class="form-horizontal" data-bind="submit: addMsg">
                        <div class="form-group" data-bind="with: newMsg">
                            <div class="col-md-12">
                                <textarea class="form-control" id="inputContent" data-bind="value:Content" ></textarea>
                            </div>


                        </div>
                        <button type="submit" class="btn btn-default" onclick="autoScroll();">Отправить</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>